@{
    Layout = "User/_UserLayout";
    ViewData["Title"] = "Pizzeria";
}
@model List<Pizza>
<section id="menu" class="text-center">
    <h6>Trova la tua deliziosa pizza</h6>
    <h2 class="mt-3">Menu</h2>
    <div class="d-flex align-items-center justify-content-center">
        <div class="vertical-arrow"> > </div>
    </div>
    <div class="container">
        <ul class="row row-cols-3 g-3 list-unstyled">
            @foreach(Pizza pizza in Model)
            {
                <li class="col">
                    <div class="myCard">
                        <img src="@pizza.Image" class="img-fluid img-card" />
                        <h3 class="my-4 fs-3 fw-bold">@pizza.Name</h3>
                        <p class="desc">@pizza.Description</p>
                        <div class="d-flex justify-content-center gap-5 align-items-center">
                            <div id="prezzo">@pizza.Price €</div>
                            <a class="myBtn ordina">Ordina</a>
                        </div>
                    </div>

                </li>
            }
        </ul>
    </div>
    
</section>
